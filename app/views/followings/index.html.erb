<div class="container">

	<div class="row">
		<% @user.following.each do |follow| %>

		<div class="col s12 m4">

			<div class="card">
				<div class="card-image waves-effect waves-block waves-light">
					<img class="activator" src="<%= follow.user.photo %>">
				</div>
				<div class="card-content">
					<span class="card-title activator grey-text text-darken-4"><%= follow.user.first_name %><i class="material-icons right">more_vert</i></span>
					<p><a href="#">This is a link</a></p>
				</div>
				<div class="card-reveal activator">
					<span class="card-title grey-text text-darken-4 ">Card Title<i class="material-icons right">close</i></span>
					<p>Here is some more information about this product that is only revealed once clicked on.</p>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>