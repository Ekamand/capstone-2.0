<div class="container, control-label col-sm-12">
  <div class="col-lg-12"> 
    <div class="well">   
      <div class="item">

      <% if @post.errors.any? %>
      <div>
      <%= pluralize(@post.errors.count, "error") %>
      <ul>
       <% @post.errors.full_messages.each do |error| %>
      <li> <%= error %></li>

  <% end %> 
  </ul>
  </div>
  <% end %>

 <center><h2 class="page_title">Create a New post</h2></center>
 <%= form_tag "/posts", method: :post do %>

                <div class="form-group">
                  <label class="control-label col-sm-3">Post Title:</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" name="input_title" 
                     ><br>
                  </div>
                </div>

                    <div class="form-group">
                  <label class="control-label col-sm-3">Remedy Ingridents</label>
                  <div class="col-sm-9">
                    <textarea type="text" class="form-control" name="input_ingredients" rows="5"
                    ></textarea><br>
                  </div>
                </div>

                    <div class="form-group">
                  <label class="control-label col-sm-3">Text</label>
                  <div class="col-sm-9">
                    <textarea type="text" class="form-control" name="input_text" rows="5"
                    ></textarea><br>
                  </div>
                </div>

                <div class="form-group">
                  <label class="control-label col-sm-3"></label>
                  <div class="col-sm-9">          
                    <input type="hidden" class="form-control"  name="user_id" value="<%= current_user.id %>">
                  <br></div>
                </div>
                <div class="form-group">
                  <label class="control-label col-sm-3"></label>
                  <div class="col-sm-9">          
                    <input type="text" class="form-control"  name="img_url">
                  <br></div>
                </div>
                <center><input type="submit" class="btn btn-info" value ="Add Item" ></center>

 <% end %>
      </div>
    </div>
  </div>
</div>


